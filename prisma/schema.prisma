model TeamProfile {
  id          Int      @id @default(autoincrement())
  name        String
  role        String
  image       String
  bio         String?
  description String?

  projects    Json     // ["AI App", "Web Platform"]
  experience  Json     // ["5 years in Flutter", "2 years in AI"]

  // Resume stored only as a link
  resume      String?  

  // Media: [ { "name": "Portfolio", "link": "https://portfolio.com" } ]
  media       Json?

  reviews     Json     // ["Great leader", "Very professional"]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model InternshipProject {
  id        Int      @id @default(autoincrement())
  image     String   // Cloudinary URL or base64 string
  name      String
  projects  String     // array of project names
  links     String    // array of project links
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



